{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["apps/*/src/main.tsx", "apps/*/src/index.tsx"],
  "project": ["apps/**/*.{ts,tsx,js,jsx}", "packages/**/*.{ts,tsx,js,jsx}"],
  "ignore": [
    "**/*.config.*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/dist/**",
    "**/build/**",
    "**/.next/**",
    "**/node_modules/**"
  ],
  "ignoreDependencies": ["@biomejs/biome"],
  "workspaces": {
    "apps/react-app": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  }
}
