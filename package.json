{
  "name": "react-tailwindcss-sandbox",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/apps/*",
    "packages/features/*"
  ],
  "scripts": {
    "script:typecheck": "npx tsc --noEmit scripts/dev-watch.ts --moduleResolution node --module esnext --target esnext",
    "script:format:fix": "npx @biomejs/biome check scripts/dev-watch.ts --write",
    "clean:modules": "find packages -type d -name node_modules -prune -exec rm -rf {} +",
    "clean:build": "find packages -name '*.tsbuildinfo' -delete && find packages -type d -name dist -exec rm -rf {} +",
    "clean:all": "pnpm run clean:build && rm -rf dist node_modules && pnpm run clean:modules",
    "dev:react-app": "pnpm --filter ./packages/apps/react-app dev",
    "dev:watch": "pnpm -r build:watch",
    "dev:watch:libs": "pnpm --filter './packages/{config,utils,hooks,theme,ui}' -r build:watch",
    "dev:watch:features": "pnpm --filter './packages/features/*' -r build:watch",
    "dev:watch:all": "pnpm --filter '!./packages/apps/*' -r build:watch",
    "dev:watch:react-app": "node --experimental-strip-types ./scripts/dev-watch.ts react-app",
    "dev:watch:app": "node --experimental-strip-types ./scripts/dev-watch.ts",
    "build:analyze": "pnpm -r build:analyze",
    "build:dev": "pnpm -r build:dev",
    "build:test": "pnpm -r build:test",
    "build:stg": "pnpm -r build:stg",
    "build:prod": "pnpm -r build:prod",
    "build:prod:app": "pnpm --filter './packages/apps/*' -r build:prod",
    "build:prod:react-app": "pnpm --filter ./packages/apps/react-app build:prod",
    "build:prepare": "pnpm --filter '!./packages/apps/*' -r --workspace-concurrency=4 build:prod",
    "format": "pnpm -r format",
    "format:fix": "pnpm -r format:fix",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.4.0",
    "concurrently": "^9.2.1",
    "knip": "^5.63.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "taze": "^19.6.0",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "24.4.0",
    "yarn": "4.9.2",
    "npm": "11.4.2",
    "pnpm": "10.14.0"
  }
}
