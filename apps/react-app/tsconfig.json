{
  "extends": "@internal/shared-config/tsconfig-app",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/features/*": ["./src/features/*"],
      "@/layouts/*": ["./src/layouts/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "dist", "public"],
  "references": [
    { "path": "../../packages/config/tsconfig.json" },
    { "path": "../../packages/ui/tsconfig.json" },
    { "path": "../../packages/theme/tsconfig.json" },
    { "path": "../../packages/features/home/tsconfig.json" },
    { "path": "../../packages/features/about/tsconfig.json" },
    { "path": "../../packages/features/contact/tsconfig.json" },
    { "path": "../../packages/features/dashboard/tsconfig.json" }
  ]
}
