{
  "name": "@internal/theme",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/styles/index.css",
    "./styles/base": "./dist/styles/base.css",
    "./styles/components": "./dist/styles/components.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "clean": "rm -rf dist node_modules *.tsbuildinfo",
    "build:dev": "NODE_ENV=development rslib build",
    "build:test": "NODE_ENV=test rslib build",
    "build:stg": "NODE_ENV=staging rslib build",
    "build:prod": "NODE_ENV=production rslib build",
    "build:watch": "NODE_ENV=development rslib build --watch",
    "dev": "NODE_ENV=development rslib build --watch",
    "typecheck": "tsc --build --noEmit",
    "format": "biome format --write .",
    "format:fix": "biome check . --fix --unsafe",
    "test": "vitest"
  },
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@internal/shared-config": "workspace:*",
    "@rslib/core": "^0.9.2",
    "@types/node": "^22.18.3",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0.0"
  }
}
