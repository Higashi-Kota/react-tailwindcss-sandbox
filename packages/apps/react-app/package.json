{
  "name": "@internal/react-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules *.tsbuildinfo",
    "dev": "vite --force --port 3000",
    "build:dev": "NODE_ENV=development vite build --mode development",
    "build:test": "NODE_ENV=test vite build --mode test",
    "build:stg": "NODE_ENV=staging vite build --mode staging",
    "build:prod": "NODE_ENV=production vite build --mode production",
    "build:analyze": "vite build --mode production --analyze",
    "preview": "vite preview --port 3000",
    "typecheck": "tsc --noEmit",
    "format": "biome format ./src --write",
    "format:fix": "biome check ./src --fix --unsafe",
    "test": "vitest"
  },
  "dependencies": {
    "@internal/config": "workspace:*",
    "@internal/feature-about": "workspace:*",
    "@internal/feature-contact": "workspace:*",
    "@internal/feature-dashboard": "workspace:*",
    "@internal/feature-home": "workspace:*",
    "@internal/theme": "workspace:*",
    "@internal/ui": "workspace:*",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.1",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@internal/shared-config": "workspace:*",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.0.7",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4"
  }
}
